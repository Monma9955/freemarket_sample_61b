.top
  = render "products/header"
.shop_background
  .all_contents
    .shop_contents
      .item_name
        = @product.name
      .item_contents
        .item_photo
          - @product.photos.each_with_index do |photo,i|
            - if i == 0
              = image_tag( photo.photo.url, class: "products" , size: '320x320')
            - else
              .item_otherphoto
                = image_tag( photo.photo.url, class: "products", size: '100x100' )
        .seller_table
          %table.itembuy-content__table
            %tbody
              %tr
                %th 出品者
                %td
                  = link_to '/' do
                    = @product.user.nickname
                  %div
                    .itembuy-user-ratings{ id: 'itembuy-icon-good' }
                      %i.fas.fa-smile
                      %span 22
                    .itembuy-user-ratings
                      %i.fas.fa-meh
                      %span 25
                    .itembuy-user-ratings
                      %i.fas.fa-frown
                      %span 5000
              %tr
              %th カテゴリー
              %td
                = link_to  '/' do
                  = @product.category.parent.parent.name
                - if @product.category.present?
                  = link_to '/' do
                    .itembuy-table-sub
                      %i.fas.fa-chevron-right
                      = @product.category.parent.name
                  = link_to '/' do
                    .itembuy-table-sub
                      %i.fas.fa-chevron-right
                      = @product.category.name
            %tr
              %th  ブランド
              %td
                = link_to '/' do
                  = @product.brand.name
              %tr
                %th 商品の状態
                %td
                  = @product.condition.value
              %tr
                %th 配送料の負担
                %td
                  = @product.delivery_expense.value
              %tr
                %th 配送の方法
                %td
                  = @product.delivery_method.value
              %tr
                %th 配送元地域
                %td
                  = @product.area.name
              %tr
                %th 発送日の目安
                %td
                  = @product.shipdate.value

      .item_price
        .price
          .price_jpy
            ¥
            = @product.price.to_s(:delimited)
          .price_tax
            .price
            %span.itembuy-content__tax (税込)
            %span.itembuy-content__fee
            - if @product.delivery_expense.id == 1
              送料込み
            - else
              着払い
        .buy_button
          = link_to '#' do
            購入画面に進む
      .item_discription
        %p.itembuy-detail__inner
          = @product.description

      .itembuy-review
        .itembuy-button__left
          %button{ type: 'button', name: 'like!', class: 'i far fa-heart' }
            %span いいね! 22
          = link_to '/' do
            %i.far.fa-flag
              %span 不適切な商品の報告
        .itembuy-button__right
          = link_to '/' do
            %i.fas.fa-shopping-bag
              %span あんしん・あんぜんへの取り組み
    .item_comment
      .cation
        相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
      .comment_field
        = form_tag do
          %input.text
          %button コメントする
    .pre_next_contents
      .pre
        - if ((@product.id-1) > 0)
          = link_to product_path(@product.previous) do
            前へ
      .next
        - if (@product.id != @product_count)
          = link_to product_path(@product.next) do
            次へ
    .sns_contents
      .sns
        .facebook
          =link_to "#" do
            = image_tag("facebook.jpg")
        .twitter
          =link_to "#" do
            = image_tag("twitter.jpg")
        .pinteres
          =link_to "#" do
            = image_tag("pinteres.png")
    .other_user_item
      %h2.itembuy-user-profile__head
        = link_to '/' do
          = @product.user.nickname
          さんのその他の出品

      .itembuy-user-profile__box
        - @products_user.each do |sell_user|
        %figure
          = link_to products_path(sell_user.id)
            = image_tag( sell_user.photos[0].photo.url , width: '300' , height: '300' )
              %figcaption.products__text
                = sell_user.name
              .products__price
                .products__price--tag
                  ¥
                  = sell_user.price.to_s(:delimited)
