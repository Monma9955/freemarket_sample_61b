.top
  = render "products/header"
.shop_background
  .all_contents
    .shop_contents
      .item_name
        @item_name

      .item_contents
        .item_photo
          = image_tag("test.png", class: "products")
          .item_otherphoto
            = image_tag("test.png", class: "products")

        .seller_table
          %table.itembuy-content__table
            %tbody
              %tr
                %th 出品者
                %td
                  = link_to '/' do
                    @user.nickname
                  %div
                    .itembuy-user-ratings{ id: 'itembuy-icon-good' }
                      %i.fas.fa-smile
                      %span 22
                    .itembuy-user-ratings
                      %i.fas.fa-meh
                      %span 25
                    .itembuy-user-ratings
                      %i.fas.fa-frown
                      %span 5000
              %tr
              %th カテゴリー
              %td
                = link_to  '/' do
                  @bigcategory.name
                - if @category.present?
                  = link_to '/' do
                    .itembuy-table-sub
                      %i.fas.fa-chevron-right
                      = @category.name
                = link_to '/' do
                  .itembuy-table-sub
                    %i.fas.fa-chevron-right
                      @smallcategory.name
            %tr
              %th  ブランド
              %td
                = link_to '/' do
                  @product.brand
              %tr
                %th 商品の状態
                %td
                  @condition.value
              %tr
                %th 配送料の負担
                %td
                  @delivery_charge.value
              %tr
                %th 配送の方法
                %td
                  @delivery_way.value
              %tr
                %th 配送元地域
                %td
                  = link_to '/' do
                    @prefecture.name
              %tr
                %th 発送日の目安
                %td
                  @delivery_days.value

      .item_price
        .price
          .price_jpy
            ¥10,000
          .price_tax
            .price
            %span.itembuy-content__tax (税込)
            %span.itembuy-content__fee
            - if '#'
              送料込み
            - else
              着払い
        .buy_button
          = link_to '#' do
            購入画面に進む
      .item_discription
        %p.itembuy-detail__inner
          [商品]Diagram グレースコンチネンタルショートブーツ未使用品

      .itembuy-review
        .itembuy-button__left
          %button{ type: 'button', name: 'like!', class: 'i far fa-heart' }
            %span いいね! 22
          = link_to '/' do
            %i.far.fa-flag
              %span 不適切な商品の報告
        .itembuy-button__right
          = link_to '/' do
            %i.fas.fa-shopping-bag
              %span あんしん・あんぜんへの取り組み
    .item_comment
      .cation
        相手のことを考え丁寧なコメントを心がけましょう。不快な言葉遣いなどは利用制限や退会処分となることがあります。
      .comment_field
        = form_tag do
          %input.text
          %button コメントする
    .pre_next_contents
      .pre
        = link_to '#' do
          前へ
      .next
        = link_to '#' do
          次へ
    .sns_contents
      .sns
        .facebook
          =link_to "#" do
            = image_tag("facebook.jpg")
        .twitter
          =link_to "#" do
            = image_tag("twitter.jpg")
        .pinteres
          =link_to "#" do
            = image_tag("pinteres.png")
    .other_user_item
      %h2.itembuy-user-profile__head
        = link_to '/' do
          @user.nicknameさんのその他の出品

      .itembuy-user-profile__box
        - for i in 1..10
          %figure
            = image_tag("test.png", class: "products")
            %figcaption.products__text
              テスト テスト 
              %br
              テスト テスト
            .products__price
              .products__price--tag
                ¥10,000

    .other_item_species
      %h2.items_species__head
        = link_to '/' do
          @item_name その他の出品
      .itembuy-spieces__box
        - for i in 1..10
          %figure
            = image_tag("test.png", class: "products")
            %figcaption.products__text
              テスト テスト 
              %br
              テスト テスト
            .products__price
              .products__price--tag
                ¥10,000
    
    .under_top_line
    .under_item_title
      fmarket > @item_name
.footer
  = render "products/footer"

