= link_to '出品', new_product_path
- @products.each do |product|
  %h3.sell-area__name
    ユーザー名
  %p= product.user.nickname

  %h3.sell-area__name
    商品名
  %p= product.name 

  %h3.sell-area__name
    商品の説明
  %p= product.description

  %h3.sell-area__name
    カテゴリー
  %p= product.category.name

  %h3.sell-area__name
    サイズ
  %p= product.size.value

  %h3.sell-area__name
    ブランド
  %p= product.brand.name

  %h3.sell-area__name
    商品の状態
  %p= product.condition.value

  %h3.sell-area__name
    配送料の負担
  %p= product.delivery_expense.value

  %h3.sell-area__name
    配送の方法
  %p= product.delivery_method.value

  %h3.sell-area__name
    発送元の地域
  %p= product.area.name

  %h3.sell-area__name
    配送までの日数
  %p= product.shipdate.value

  %h3.sell-area__name
    取引状況
  %p= product.status.value

  = link_to '削除', "/products/#{product.id}", method: :delete
