.wrapper
  .main-contents
    = render "products/header"
    = render "categories/breacrumb"
    .category
      .category__header
        - @category.children.each do |children|
          .category__header--list
            = link_to category_path(children.id) do
              %p 
                = children.name
      .products__main
        .products__main--title
          = @category.name + 'の商品一覧'
        .products__main--list
          = render partial: "products/list", collection: @products, as: :product
    = render "products/cameraicon"
    = render "products/footer"

