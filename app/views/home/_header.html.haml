.main-header
  .main-header__contents
    .logo
      = link_to home_top_path do
        = image_tag("fmarket_logo_red.png")
    .search
      %input.search{placeholder: '何かお探しですか？'}
  .menu
    .category_icon
      = fa_icon 'mouse-pointer', class: 'icon'

    .category
      = link_to '#' do
        カテゴリーから探す
    .brand_icon
      = fa_icon 'tag', class: 'icon'

    .brand
      = link_to '#' do
        ブランドから探す

    
    - if user_signed_in?
      .nice_icon
        = fa_icon 'heart', class: 'icon'

      .nice
        = link_to '#' do
          いいね！一覧

      .info_icon
        = fa_icon 'bell', class: 'icon'

      .information
        = link_to '#' do
          お知らせ

      .todo_icon
        = fa_icon 'check', class: 'icon'

      .todo
        = link_to '#' do
          やることリスト

      .mypage_icon
        = fa_icon 'user', class: 'icon'

      .mypage
        = link_to  user_path(current_user), method: :get do
          マイページ

      .login
        = link_to "ログアウト", destroy_user_session_path, method: :delete

    - else
      .login
      = link_to "新規登録", new_user_registration_path
      = link_to "ログイン", user_session_path

